@using WebAPPFarmerCompanion.Models;

@{
    ViewBag.Title = "Farmer Survey";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
    AlertModel alertMessage = TempData["AlertMessage"] as AlertModel;
}

<div id="wrapper">
    <div id="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/Farmer/Index"><b>Dashboard</b></a>
                </li>
                <li class="breadcrumb-item active">Farmer Survey</li>
            </ol>
        </div>
    </div>
</div>
<h2>Survey Form</h2>

@if (alertMessage != null)
{
    @Html.Partial("~/Views/Shared/_AlertView.cshtml", alertMessage);
}

@using (Html.BeginForm("FarmerSurvey", "Farmer", FormMethod.Post, new { id = "surveyform" }))
{
    <div class="container-fluid">

        <div class="form-group">
            <div class="input-group has-feedback">
                <h3>Describe, in simple words, your daily routine when working in your farm ?</h3>
                @Html.TextArea("AnswerQA", null, new { placeholder = "AnswerQA", @class = "form-control" })
                <span class="form-control-feedback"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group has-feedback">
                <h3>Describe any events that have contributed to your gains ?</h3>
                @Html.TextArea("AnswerQB", null, new { placeholder = "AnswerQB", @class = "form-control" })
                <span class="form-control-feedback"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="input-group has-feedback">
                <h3>Describe any events that have caused you loss ?</h3>
                @Html.TextArea("AnswerQC", null, new { placeholder = "AnswerQC", @class = "form-control" })
                <span class="form-control-feedback"></span>
            </div>
        </div>

        <div class="form-group modal-footer">
            <button type="submit" style="text-align:center" class="btn btn-success"><span class="glyphicon glyphicon-check"></span> Save</button>
        </div>
    </div>
}


@section myscript{
    <script type="text/javascript">
        $(function () {
            clearform();
            $(".alert").fadeTo(5000, 1).fadeOut(1000);
            HideHeaders();
            $(window).resize(function () {
                HideHeaders();
            });
        });

        function HideHeaders() {
            var height = $(window).height() - 550;
            var width = $(window).width() - 300;
            $('textarea').css('width', width + "px");
            $('textarea').css('height', height + "px");
        }

        function clearform() {
            $('textarea').text("");
        }
    </script>
}
